{
    "name": "baspa/energyzero-php-api",
    "description": "PHP client for the dynamic prices from EnergyZero",
    "keywords": [
        "Baspa",
        "energyzero-php-api"
    ],
    "homepage": "https://github.com/baspa/energyzero-php-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Baspa",
            "email": "hello@baspa.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.9",
        "illuminate/http": "^11.21",
        "illuminate/support": "^11.21"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20",
        "phpstan/phpstan": "^1.11",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Baspa\\EnergyZero\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Baspa\\EnergyZero\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
